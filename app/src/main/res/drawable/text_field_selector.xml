<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Entered state: non-empty text -->
    <item android:drawable="@drawable/text_field_entered" android:state_focused="false" android:state_enabled="true" android:state_empty="true"/>

    <!-- Focused state: editing -->
    <item android:drawable="@drawable/text_field_focused" android:state_focused="true" />

    <!-- Default state -->
    <item android:drawable="@drawable/text_field_default" />
</selector>

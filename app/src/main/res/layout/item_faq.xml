<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/myCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
     app:cardCornerRadius="8dp"

    app:cardBackgroundColor="@color/white">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/_10sdp"
    android:paddingVertical="@dimen/_5sdp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_alignParentStart="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem Ipsum  is simply dummy text?"
            android:textColor="@color/black"
            android:drawableTint="@color/red"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/_15sdp"
            android:drawableEnd="@drawable/down_arrow"
            android:textSize="@dimen/_12sdp"
            android:id="@+id/title"
            style="@style/text_support1"/>

    </RelativeLayout>
    <TextView
        android:visibility="gone"
        android:id="@+id/content"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lorem Ipsum is simply dummy.  he r aining Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum"

        android:layout_marginTop="@dimen/_10sdp"
        android:drawableTint="@color/red"
        android:gravity="center_vertical"
        android:textSize="@dimen/_11sdp"

        style="@style/text_support1"/>

</LinearLayout>


</androidx.cardview.widget.CardView>
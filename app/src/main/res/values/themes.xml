<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MVR" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->


        <item name="colorPrimary">@color/red</item>
        <item name="android:statusBarColor">@color/red</item>

        <!-- Draw behind the status bar -->

    </style>


    <style name="Theme.MVR" parent="Base.Theme.MVR" >
        <item name="backgroundColor">@color/red</item>
    </style>
    <style name="edit_text_login" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rectagle_login_edit_bg</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/robotoregular</item>

        <item name="android:layout_marginTop">@dimen/_16sdp</item>
        <item name="android:layout_marginStart">@dimen/_28sdp</item>
        <item name="android:layout_marginEnd">@dimen/_28sdp</item>
        <item name="android:paddingRight">@dimen/_28sdp</item>
        <item name="android:paddingLeft">@dimen/_15sdp</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:minHeight">@dimen/_35sdp</item>
        <item name="android:textColorHint">@color/color_login_placeholder_text</item>
    </style>


    <style name="edit_text_login1" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rectagle_login_edit_bg</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/robotoregular</item>

        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:layout_marginStart">@dimen/_28sdp</item>
        <item name="android:layout_marginEnd">@dimen/_28sdp</item>
        <item name="android:paddingRight">@dimen/_28sdp</item>
        <item name="android:paddingLeft">@dimen/_15sdp</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:minHeight">@dimen/_35sdp</item>
        <item name="android:textColorHint">@color/color_login_placeholder_text</item>
    </style>
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="colorButtonNormal">@color/white</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>


    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="btn_login" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rectagle_login_btn</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">@dimen/_15sdp</item>
        <item name="android:paddingRight">@dimen/_15sdp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/robotomedium</item>
        <item name="android:layout_marginTop">@dimen/_15sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">@dimen/_35sdp</item>
    </style>

    <style name="TextView_header" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:fontFamily">@font/robotomedium</item>
    </style>
    <style name="text_support" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/robotoregular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
    </style>
    <style name="text_support1" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/robotoregular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_13sdp</item>
    </style>


    <style name="text_bold" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/robotobold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_13sdp</item>

    </style>
    <style name="BottomNavigationTextStyleActive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item> <!-- Adjust text size as needed -->
        <item name="android:paddingBottom">0dp</item> <!-- Decrease padding to reduce margin below icon -->
        <item name="android:paddingTop">0dp</item> <!-- Optional: Adjust top padding -->
    </style>

    <!-- Inactive state style -->
    <style name="BottomNavigationTextStyleInactive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item> <!-- Adjust text size as needed -->
        <item name="android:paddingBottom">10dp</item> <!-- Decrease padding to reduce margin below icon -->
        <item name="android:paddingTop">0dp</item> <!-- Optional: Adjust top padding -->
    </style>
    <style name="Widget.App.BottomAppBar" parent="">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomAppBar</item>
    </style>

    <style name="ThemeOverlay.App.BottomAppBar" parent="">
        <item name="colorSecondary">@color/red</item>
    </style>

    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="colorOnPrimary">@color/red</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
    </style>


    <style name="MyDenseOutlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="materialThemeOverlay">@style/MyThemeOverlayOutlinedDense</item>
        <item name="shapeAppearance">@style/MyShapeAppearance</item>
    </style>
    <style name="MyThemeOverlayOutlinedDense">
        <item name="editTextStyle">@style/MyTextInputEditText_outlinedBox_dense_h
        </item>
    </style>
    <style name="MyTextInputEditText_outlinedBox_dense_h" parent="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>
    <!-- Define the shape appearance -->
    <style name="MyShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="BottomNavTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">16sp</item> <!-- Adjust the text size here -->
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>


</resources>